		overallPanel.setLayout(new GridLayout(0,2));
		JPanel panel = new JPanel();
		JPanel panel2 = new JPanel();
		JPanel panel3 = new JPanel();
		panel2.setLayout(new FlowLayout(FlowLayout.LEADING));
		panel3.setLayout(new GridLayout(0,2));
		overallPanel.add(panel);
		overallPanel.add(panel2, BorderLayout.CENTER);
		ImageIcon icon = new ImageIcon("C:\\Users\\14079\\eclipse-workspace\\CS180\\src\\Project5\\nopic_192.gif");
		JLabel picture = new JLabel(icon);
		JLabel name = new JLabel("<html><p>Chad Brad</p><p></p></html>");
		JLabel email = new JLabel("<html><p>ChadBrad2020@purdue.edu</p><p></p></html>");
		JLabel phoneNum = new JLabel("<html><p>305-555-5555</p><p></p></html>");
